{
  "name": "monorepotemplate",
  "version": "0.0.1",
  "description": "Nestjs Monorepo Repository",
  "main": "index.js",
  "workspaces": {
    "packages": [
      "./apps/backend-apps/*",
      "./apps/frontend-apps/*",
      "./libs/*",
      "./tools/eslint"
    ]
  },
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "prepare": "husky install",
    "build": "nest build ",
    "infra:local": "docker-compose -f docker-compose-local.yml up --build",
    "monorepo:install": "yarn && yarn workspace @tools/eslint.config install && yarn workspace @app/api-scheduller install && yarn workspace @app/app-scheduller install",
    "format": "prettier --write \"apps/backend-apps/**/*.{ts, js, json}\" \"libs/**/*.{ts, js, json}\" ",
    "lint": "yarn format && eslint \"apps/backend-apps/**/*.{ts, js, json}\" \"libs/**/*.{ts, js, json}\" --fix",
    "test": "jest --detectOpenHandles --maxWorkers=50%",
    "test:e2e": "jest --config ./jest.config.e2e.ts --maxWorkers=50%",
    "test:coverage": "jest --coverage --detectOpenHandles --maxWorkers=50%",
    "commit": "cz",
    "start:api-scheduller:dev": "nest start @app/api-scheduller --debug --watch",
    "start:app-scheduller:dev": "yarn workspace @app/app-scheduller start",
    "start:api-scheduller:prd": "node dist/apps/backend-apps/api-scheduller/main.js",
    "start:app-scheduller:prd": "node dist/apps/frontend-apps/app-scheduller/main.js",
    "add:module": "monorepo-nestjs-cli --module",
    "add:test": "monorepo-nestjs-cli --test",
    "add:app": "monorepo-nestjs-cli --app",
    "make-badges": "istanbul-badges-readme",
    "tag:production": "changelog generate && bash ./update-version.sh && cd deploy && bash ./production-version.sh && cd .."
  },
  "dependencies": {
    "@nestjs/common": "^9.2.1",
    "@nestjs/core": "^9.2.1",
    "@nestjs/platform-express": "^9.2.1",
    "@tanstack/react-query": "^4.22.0",
    "@trpc/client": "^10.9.0",
    "@trpc/next": "^10.9.0",
    "@trpc/react-query": "^10.9.0",
    "@trpc/server": "^10.9.0",
    "keycloak-connect": "^20.0.2",
    "nest-keycloak-connect": "^1.9.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "swagger-ui-express": "^4.5.0",
    "uuid": "^9.0.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.8",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.2.1",
    "@prisma/client": "^4.8.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "license": "MIT"
}